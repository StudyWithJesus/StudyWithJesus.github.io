rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check admin claim or authenticated user
    function isAdmin() {
      return request.auth != null && 
        (request.auth.token.admin == true || 
         request.auth.uid == 'kdWm2MNPK1eN8GqEt8AOgjWCw8P2'); // Your Firebase UID
    }
    
    // Attempts collection
    match /attempts/{attemptId} {
      // Anyone can create an attempt (with validation)
      allow create: if 
        request.resource.data.username is string &&
        request.resource.data.username.size() <= 30 &&
        request.resource.data.moduleId is string &&
        request.resource.data.examId is string &&
        request.resource.data.score is number &&
        request.resource.data.score >= 0 &&
        request.resource.data.score <= 100;
      
      // Authenticated users can read attempts (admin access)
      allow read: if isAdmin();
      
      // Only admins can update or delete (check custom claim or specific UID)
      allow update, delete: if isAdmin();
    }
    
    // Leaderboard collection (read-only, updated by Cloud Functions)
    match /leaderboard/{moduleId} {
      // Anyone can read leaderboard
      allow read: if true;
      
      // Only Cloud Functions can write (admin SDK bypasses rules)
      allow write: if false;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Admins can read all users
      allow read: if isAdmin();
      
      // Only Cloud Functions manage user creation
      allow write: if false;
    }
    
    // Admin logs collection
    match /admin_logs/{logId} {
      // Only admins can read logs
      allow read: if isAdmin();
      
      // Authenticated users can write their own admin logs (for audit trail)
      // This allows client-side logging of admin actions
      allow create: if request.auth != null &&
        request.resource.data.userId is string &&
        request.resource.data.username is string &&
        request.resource.data.action is string &&
        request.resource.data.page is string;
      
      // No updates or deletes from client
      allow update, delete: if false;
    }
    
    // Fingerprints collection (visitor tracking)
    match /fingerprints/{fingerprintId} {
      // Anyone can write their own fingerprint
      allow create, update: if
        request.resource.data.fingerprint is string &&
        request.resource.data.name is string &&
        request.resource.data.name.size() <= 30;

      // Only admins can read fingerprints
      allow read: if isAdmin();

      // No deletes from client
      allow delete: if false;
    }

    // Chat messages collection
    match /messages/{messageId} {
      // Anyone can read messages
      allow read: if true;

      // Anyone can create messages (with validation)
      allow create: if
        request.resource.data.username is string &&
        request.resource.data.username.size() > 0 &&
        request.resource.data.username.size() <= 30 &&
        request.resource.data.message is string &&
        request.resource.data.message.size() > 0 &&
        request.resource.data.message.size() <= 500;

      // No updates or deletes (messages are immutable)
      // Only admins can delete messages if needed
      allow update: if false;
      allow delete: if isAdmin();
    }

    // User profiles collection (for profile photos synced in chat)
    match /user_profiles/{username} {
      // Anyone can read profiles (to see other users' photos)
      allow read: if true;

      // Users can create/update their own profile
      allow create, update: if
        request.resource.data.username is string &&
        request.resource.data.username.size() > 0 &&
        request.resource.data.username.size() <= 30 &&
        request.resource.data.photoUrl is string &&
        request.resource.data.photoUrl.size() <= 500;

      // No deletes from client
      allow delete: if isAdmin();
    }
  }
}
